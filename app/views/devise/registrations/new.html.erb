
<%= render "shared/logo_short"%>

<div class="user-sign-up">
<%= form_with model: @user, url: user_registration_path, class: "new-user", local: true do |f| %>

   
<div class="field-box">
<%= render "shared/error_messages", model: f.object %>
  <div class="field">
    <h1>新規登録</h1>
  </div>
  <div class="field">
    <p>ユーザーネーム</p>
    <%=f.text_field :name%>
  </div>

  <div class="field">
    <p>メールアドレス</p>
    <%=f.email_field :email%>
  </div>

  <div class="field">
    <p>パスワード</p>
    <%=f.password_field :password ,placeholder: "6文字以上の半角英数字で入力してください"%>
  </div>

  <div class="field">
    <p>パスワード(確認)</p>
    <%=f.password_field :password_confirmation, placeholder: "同じパスワードを入力してください"%>
  </div>

  <div class="field">
    <p>電話番号</p>
    <%=f.text_field :phone_number, placeholder: "半角数字で入力してください"%>
  </div>

  <div class="field date-field"> 
    <p>生年月日</p>
    <%=raw sprintf(
      f.date_select(
       :birth_date,
        class:'select-birth',
        id:"birth-date",
        use_month_numbers: true,
        prompt:'--',
        start_year: 1930,
        end_year: (Time.now.year - 0),
        date_separator: '%s'),
         "<p> 年 </p>", "<p> 月 </p>" ) + "<p> 日 </p>"%>
  </div>

  <div class='register-btn'>
    <%= f.submit "会員登録" ,class:"register-red-btn" %>
  </div>
</div>
<% end %>
  </div>
<%= render "shared/logo_short"%>


